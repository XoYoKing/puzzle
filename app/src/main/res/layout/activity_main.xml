<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/seeting"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/setting" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <Button
            android:id="@+id/begin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:background="@mipmap/go"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="fill_parent">

        <GridLayout
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/main_game_min"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center_horizontal"

          ></GridLayout>
        <GridLayout
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:id="@+id/main_game_middle"
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_centerHorizontal="true"

            ></GridLayout>
        <TextView
            android:id="@+id/weizhi"
            android:layout_alignParentBottom="true"
            android:background="#2d2525"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearlayout_photo"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/photo"
           />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>

    </LinearLayout>

</LinearLayout>
