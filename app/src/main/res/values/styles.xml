<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AnimationFade">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/inputdown</item>
        <item name="android:windowExitAnimation">@anim/outputdown</item>
    </style>
    <style name="AnimationFade_pa">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/input_pa</item>
        <item name="android:windowExitAnimation">@anim/output_pa</item>
    </style>
    <style name="AnimationFade_success">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/input_success</item>
        <item name="android:windowExitAnimation">@anim/output_success</item>
    </style>
    <style name="AnimationFade_out">
        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/input_out</item>
        <item name="android:windowExitAnimation">@anim/output_out</item>
    </style>

</resources>
